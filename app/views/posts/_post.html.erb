<h1><%= @post.title %></h1>
<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
    <a class='fs-link' href="/#/tags/<%=tag.id%>"><li><%= tag.name %></li></a>
  <% end %>
</ul>

<p><%= @post.body %></p>
<h3>Comments:</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li><a class='fs-link' href="#/posts/<%=@post.id%>/comments/<%=comment.id%>"><%= comment.body %></a></li>
  <% end %>
</ul>
